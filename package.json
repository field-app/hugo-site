{
  "name": "field-marketing",
  "version": "1.0.0",
  "description": "The static website for marketing purposes for Field.",
  "config": {
    "hugoDir": "./node_modules/.bin/hugo",
    "hugo": "./node_modules/.bin/hugo/hugo"
  },
  "scripts": {
    "start": "concurrently -k -c yellow,blue -n hugo,tailwind npm:watch:hugo npm:watch:tailwind ",
    "build": "concurrently -k -c yellow,blue -n hugo,tailwind npm:build:hugo npm:build:tailwind ",
    "watch:hugo": "$npm_package_config_hugo server --gc --disableFastRender --config hugo.toml",
    "build:hugo": "$npm_package_config_hugo --gc --cleanDestinationDir --minify --config hugo.toml",
    "build:tailwind": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css",
    "watch:tailwind": "npx tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "format:check": "prettier . --check",
    "format:all": "prettier . --write",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination $npm_package_config_hugoDir"
  },
  "contributors": [
    {
      "name": "Chris Holland",
      "email": "chris@thefieldapp.com",
      "url": "https://github.com/chrishollandaise"
    }
  ],
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "hugo-installer": "^4.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5"
  },
  "otherDependencies": {
    "hugo": "0.119.0"
  }
}
